<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main_page">
   <ImageView
    android:id="@+id/imageViewMain_page"
    android:layout_width="100dp"
    android:layout_height="100dp"
       android:src="@drawable/logo"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       />
    <TextView
        android:id="@+id/nit_srinagar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/imageViewMain_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="Welcome to National Institute Of Technology Srinagar"
        android:textAlignment="center"
        android:textColor="@color/black_shade_1"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/idbtnScan_car"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_below="@+id/nit_srinagar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_bg"
        android:text="Scan Vehicle Number"
        android:textColor="@color/white"
        android:textColorLink="#F1E4E4"
        android:textSize="15sp" />

    <Button
        android:id="@+id/idbtnNEW_car"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:layout_below="@+id/idbtnScan_car"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_bg"
        android:text="Register For new Vehicle"
        android:textColor="@color/white"
        android:textColorLink="#F1E4E4"
        android:textSize="15sp" />
 <Button
     android:id="@+id/idbtnCall_car"
     android:layout_width="296dp"
     android:layout_height="48dp"
     android:layout_below="@+id/idbtnNEW_car"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="20dp"
     android:layout_marginTop="15dp"
     android:layout_marginEnd="20dp"
     android:background="@drawable/btn_bg"
     android:text="Call or Messege"
     android:textColor="@color/white"
     android:textColorLink="#F1E4E4"
     android:textSize="15sp" />

</RelativeLayout>